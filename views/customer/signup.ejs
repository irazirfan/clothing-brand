<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>
</head>
<body>

<a href="/">Home</a>

<h2>Sign Up</h2>

<div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign up</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post">

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="name" id="name" class="form-control input-sm"
                                           placeholder="Name">
                                    <label style="color: red">
                                        <% if(typeof errors != "undefined"){ %>
                                            <% errors.forEach(function(err){ %>
                                                <% if(err.param == "name"){ %>
                                                    <%= err.msg %> <br/>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <br>

                        <div class="form-group">
                            <input type="email" name="email" id="email" class="form-control input-sm"
                                   placeholder="Email Address" onkeyup="emailValidation(this.value)">
                            <span class="error" style="color: red;"></span>
                            <label style="color: red">
                                <% if(typeof errors != "undefined"){ %>
                                    <% errors.forEach(function(err){ %>
                                        <% if(err.param == "email"){ %>
                                            <%= err.msg %> <br/>
                                        <% } %>
                                    <% }); %>
                                <% } %>
                            </label>
                            <label style="color: red">
                                <% if(typeof email_exist != "undefined"){ %>
                                    <% if (email_exist == 'yes') { %>
                                        Email Already Exists!
                                    <% } %>
                                <% } %>
                            </label>
                        </div>

                        <br>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="password" id="password" class="form-control input-sm"
                                           placeholder="Password">
                                    <label style="color: red">
                                        <% if(typeof errors != "undefined"){ %>
                                            <% errors.forEach(function(err){ %>
                                                <% if(err.param == "password"){ %>
                                                    <% if(err.param == "password"){ %>
                                                        <%= err.msg %> <br/>
                                                    <% } %>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input type="password" name="confirm_password" id="confirm_password"
                                       class="form-control input-sm" placeholder="Confirm Password">
                                <label style="color: red">
                                    <% if(typeof errors != "undefined"){ %>
                                        <% errors.forEach(function(err){ %>
                                            <% if(err.param == "confirm_password"){ %>
                                                <%= err.msg %> <br/>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                </label>
                            </div>
                            <div>
                                <label style="color: red">
                                    <% if(typeof pass_mismatch != "undefined"){ %>
                                        <% if (pass_mismatch == 'yes') { %>
                                            Password didn't match!
                                        <% } %>
                                    <% } %>
                                </label>
                            </div>
                        </div>

                        <br>
                            <input type="submit" value="Sign up" class="btn btn-info btn-block">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>