<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            color: #333;
        }

        .nav-links {
            margin-bottom: 20px;
            text-align: center;
        }

        .nav-links a {
            text-decoration: none;
            color: #007bff;
            font-size: 16px;
            margin: 0 15px;
            padding: 10px 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .nav-links a:hover {
            background-color: #007bff;
            color: white;
        }

        h2 {
            color: #007bff;
            margin-bottom: 20px;
            text-align: center;
        }

        .panel {
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .panel-body {
            padding: 15px; /* Added padding for better spacing */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .error {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            h2 {
                font-size: 20px;
            }

            .panel {
                width: 90%;
            }
        }
    </style>
</head>
<body>

<div class="nav-links">
    <a href="/">Home</a>
</div>

<h2>Please Sign Up</h2>

<div class="panel">
    <div class="panel-body">
        <form role="form" method="post">

            <div class="form-group">
                <input type="text" name="name" id="name" class="form-control"
                       placeholder="Name">
                <span class="error">
                    <% if(typeof errors != "undefined"){ %>
                        <% errors.forEach(function(err){ %>
                            <% if(err.param == "name"){ %>
                                <%= err.msg %> <br/>
                            <% } %>
                        <% }); %>
                    <% } %>
                </span>
            </div>

            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control"
                       placeholder="Email Address" onkeyup="emailValidation(this.value)">
                <span class="error"></span>
                <span class="error">
                    <% if(typeof errors != "undefined"){ %>
                        <% errors.forEach(function(err){ %>
                            <% if(err.param == "email"){ %>
                                <%= err.msg %> <br/>
                            <% } %>
                        <% }); %>
                    <% } %>
                </span>
                <span class="error">
                    <% if(typeof email_exist != "undefined"){ %>
                        <% if (email_exist == 'yes') { %>
                            Email Already Exists!
                        <% } %>
                    <% } %>
                </span>
            </div>

            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control"
                       placeholder="Password">
                <span class="error">
                    <% if(typeof errors != "undefined"){ %>
                        <% errors.forEach(function(err){ %>
                            <% if(err.param == "password"){ %>
                                <%= err.msg %> <br/>
                            <% } %>
                        <% }); %>
                    <% } %>
                </span>
            </div>

            <div class="form-group">
                <input type="password" name="confirm_password" id="confirm_password"
                       class="form-control" placeholder="Confirm Password">
                <span class="error">
                    <% if(typeof errors != "undefined"){ %>
                        <% errors.forEach(function(err){ %>
                            <% if(err.param == "confirm_password"){ %>
                                <%= err.msg %> <br/>
                            <% } %>
                        <% }); %>
                    <% } %>
                </span>
                <span class="error">
                    <% if(typeof pass_mismatch != "undefined"){ %>
                        <% if (pass_mismatch == 'yes') { %>
                            Password didn't match!
                        <% } %>
                    <% } %>
                </span>
            </div>

            <input type="submit" value="Sign up" class="btn">
        </form>
    </div>
</div>

</body>
</html>
